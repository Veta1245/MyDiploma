<Window x:Class="TOSOT_Praktika.NewStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TOSOT_Praktika"
        mc:Ignorable="d"
        Title="NewStudent" Height="400" Width="350" WindowStartupLocation="CenterScreen" WindowStyle="None" MouseDown="Window_MouseDown" Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="353*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FFF7F7CE"/>
        <Grid Grid.Row="1" >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC0C385" Offset="0.8"/>
                    <GradientStop Color="#FFF7F7CE" Offset="0.067"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="200,0,0,0">
            <Button Style="{StaticResource effect_button}" x:Name="closeNewStudent" Width="21" Margin="111,3,7,5"  Background="{x:Null}" Click="close_NewStudent" >
                <Button.ToolTip>Закрыть</Button.ToolTip>

                <Image Source="C:\Users\Veta\Desktop\TOSOT_Praktikaaaa\TOSOT_Praktika\Resources\3.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="27" Width="28"/>


            </Button>
        </StackPanel>
        <TabControl x:Name="TabControlNewStudent" Grid.Row="1" Margin="5,0,5,7" Foreground="Black" RenderTransformOrigin="0.491,0.103" BorderBrush="#FF834F4F" x:FieldModifier="public">
            <TabItem Header=" О нем ">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="145*"/>
                        <ColumnDefinition Width="181*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="foto"  Grid.Column="0" Stretch="Uniform" ToolTip="ПКН,чтобы загрузить фото" Margin="10,10,10,138" Source="C:\Users\Veta\Desktop\TOSOT_Praktikaaaa\TOSOT_Praktika\Resources\nophoto.jpg" MouseUp="foto_MouseUp"/>
                    <Label Grid.Column="1" Content="Фамилия" Style="{StaticResource lable}" Margin="0,20,89,260" FontSize="16" />
                    <Border Grid.Column="1" BorderBrush="#FFB9B994" BorderThickness="1" CornerRadius="3,8,3,8" Margin="0,56,24,224">
                        <TextBox x:Name="lastName" BorderThickness="0" Margin="3,3,4,4" Height="22" FontSize="14"/>
                    </Border>

                    <Border Grid.Column="1" Margin="0,130,24,150" Style="{StaticResource OvalTexBox}" Width="Auto" Height="Auto" >
                        <TextBox x:Name="firstName" Grid.Column="1" Style="{StaticResource TextBoxInOval}" FontSize="14"/>
                    </Border>
                    <Border Style="{StaticResource OvalTexBox}" Width="Auto" Margin="144,201,25,79" Height="Auto" Grid.ColumnSpan="2">
                        <TextBox x:Name="middleName" Style="{StaticResource TextBoxInOval}" FontSize="14"/>
                    </Border>
                    <Label Content="День рождения" Style="{StaticResource lable}" Margin="13,191,10,90" FontSize="16" />
                    <Border Style="{StaticResource OvalTexBox}" Margin="13,226,10,54" Width="Auto" Height="Auto">
                        <DatePicker x:Name="Birthday"  Margin="3,3,4,-1" BorderThickness="0" FontSize="14"/>
                    </Border>
                    <Label Grid.Column="1" Content="Имя" Style="{StaticResource lable}" Margin="0,97,116,186" FontSize="16" />
                    <Label Grid.Column="1" Content="Отчество" Style="{StaticResource lable}" Margin="0,168,89,115" FontSize="16" />
                </Grid>
            </TabItem>
            <TabItem Header="Место работы" Height="22" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="175*"/>
                        <ColumnDefinition Width="151*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Название фирмы" Style="{StaticResource lable}" Margin="18,21,0,242" FontSize="16"/>
                    <Border Grid.Column="0" Style="{StaticResource OvalTexBox}" Height="Auto" Margin="18,47,0,233" Width="Auto">
                        <ComboBox x:Name="listFirm" ItemsSource="{Binding}" SelectedValuePath="ID" DisplayMemberPath="Name_Firm" Grid.Column="0"   BorderThickness="0" IsEditable="True"  Margin="2,2,2,2" FontSize="14"  >

                        </ComboBox>
                    </Border>
                    <Button x:Name="insert_new_firm" Content="Добавить фирму" Grid.Column="1" Margin="10,54,33,233" Style="{StaticResource MyButtonStyle}" Width="Auto" Height="Auto" Click="select_newfirm">
                        <Button.ToolTip>Если нет в списке</Button.ToolTip>
                    </Button>
                    <Border Grid.Column="0" Style="{StaticResource OvalTexBox}" Margin="18,121,0,159" Width="Auto" Height="Auto">
                        <TextBox x:Name="position" Style="{StaticResource TextBoxInOval}" FontSize="14" Margin="3,5,4,4" Height="Auto"/>
                    </Border>
                    <Label Grid.Column="0" Content="Должность" Style="{StaticResource lable}" Margin="18,90,0,191" FontSize="16"/>

                    <Label Grid.Column="0" Content="Образование" Style="{StaticResource lable}" Margin="18,157,0,111" FontSize="16"/>

                    <Border Grid.Column="0" Style="{StaticResource OvalTexBox}" Height="Auto" Margin="18,188,0,92" Width="Auto">
                        <ComboBox x:Name="listeducation" Grid.Column="0"   BorderThickness="0" IsEditable="True"  Margin="2,2,2,2" FontSize="14"  >
                            <Label Content="Среднее общее(полное)" Height="30"></Label>
                            <Label Content="Начальное профессиональное" Width="182"></Label>
                            <Label Content="Среднее профессиональное"></Label>
                            <Label Content="Высшее профессиональное"></Label>
                            <Label Content="Бакалавриат"></Label>
                            <Label Content="Магистратура"></Label>
                        </ComboBox>
                    </Border>
                    <Label Grid.Column="0" Content="Номер диплома" Style="{StaticResource lable}" Margin="18,229,0,39" FontSize="16"/>
                    <Border Grid.Column="0" Style="{StaticResource OvalTexBox}" Margin="18,260,41,20" Width="Auto" Height="Auto">
                        <TextBox x:Name="numberdiploma" Style="{StaticResource TextBoxInOval}" Margin="3,3,3,2" Width="Auto" FontSize="14"/>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Заявка на обучение">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="82*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Начало обучения" Margin="22,10,10,267" Style="{StaticResource lable}" FontSize="16"></Label>
                    <Border Style="{StaticResource OvalTexBox}" Margin="23,36,0,244" Width="Auto" Height="Auto">
                        <DatePicker x:Name="beginLearning"  Margin="3,3,4,-1" BorderThickness="0" FontSize="14"/>
                    </Border>
                    <Border Style="{StaticResource OvalTexBox}" Margin="14,36,11,244" Width="Auto" Height="Auto" Grid.Column="1">
                        <DatePicker x:Name="endLearning"  Margin="3,3,4,-1" BorderThickness="0" FontSize="14"/>
                    </Border>
                    <Label Content="Конец обучения" Margin="14,10,20,267" Style="{StaticResource lable}" FontSize="16" Grid.Column="1"/>
                    <Border Grid.Column="0" Style="{StaticResource OvalTexBox}" Margin="22,105,0,175" Width="Auto" Height="Auto">
                        <TextBox x:Name="numberSertificate" Style="{StaticResource TextBoxInOval}" Margin="3,3,3,2" Width="Auto" FontSize="14"/>
                    </Border>
                    <Label Content="Номер удостоверения" Margin="22,77,148,200" Style="{StaticResource lable}" FontSize="16" Grid.ColumnSpan="2"/>
                    <Button x:Name="force_number_sertificate"  Content="Сформировать номер" Grid.Column="1" Style="{StaticResource MyButtonStyle}" Margin="5,111,20,175" Width="Auto" Height="Auto" Click="force_number_sertificate_Click"/>
                    <Border Grid.Column="0" Style="{StaticResource OvalTexBox}" Height="Auto" Margin="23,181,20,99" Width="Auto" Grid.ColumnSpan="2">
                        <ComboBox x:Name="listLearningProgramm"  ItemsSource="{Binding}" SelectedValuePath="ID" DisplayMemberPath="Name_Program" Grid.Column="0"   BorderThickness="0" IsEditable="True"  Margin="2,2,2,2" FontSize="14"  >
                        </ComboBox>
                    </Border>
                    <Button x:Name="insert_new_learning_program" Content="Добавить программу" Margin="23,222,0,65" Style="{StaticResource MyButtonStyle}" Width="Auto" Height="Auto" Click="insert_new_learning_program_Click">
                        <Button.ToolTip>Если нет в списке</Button.ToolTip>
                    </Button>
                    <Button x:Name="insert_newStudent"  Content="Добавить специалиста" Grid.Column="1" Style="{StaticResource MyButtonStyle}" Margin="0,276,10,10" Width="Auto" Height="Auto" Click="insert_newStudent_Click"></Button>
                    <Label Content="Программа обучения" Margin="23,153,106,124" Style="{StaticResource lable}" FontSize="16" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
